<Window x:Class="AutoPrinter.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPrinter"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="650"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Tabs take most of the space -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons at the bottom -->
        </Grid.RowDefinitions>

        <!-- Tabs -->
        <TabControl Grid.Row="0">
            <!-- ================== GENERAL TAB ================== -->
            <TabItem Header="General">
                <StackPanel Margin="15">
                    <CheckBox x:Name="DirectPrint"
                              Content="Direct Print Label"
                              Margin="0,0,0,10"/>

                    <CheckBox x:Name="ChkSaveToFolder"
                              Content="Save PDF to Folder"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Select Path to save labels:"
                               Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="TxtPathToSavePdf"
                                 Width="350"
                                 Margin="0,0,10,0"
                                 IsEnabled="False"/>
                        <Button Content="Browse..."
                                Width="100"
                                Click="BrowseFolder_Click"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- ================== API TAB ================== -->
            <TabItem Header="API">
                <StackPanel Margin="15">
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="API URL:" 
                                   VerticalAlignment="Center"/>
                        <TextBox x:Name="UrlBox" 
                                 Grid.Column="1" 
                                 Margin="5,0,0,0"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="User PIN:" 
                                   VerticalAlignment="Center"/>
                        <PasswordBox x:Name="PinBox" 
                                     Grid.Column="1" 
                                     Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
            </TabItem>

            <!-- ================== PRINTING TAB ================== -->
            <TabItem Header="Printing">
                <StackPanel Margin="15" Orientation="Vertical">
                    <!-- Select Printer -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Select printer:" 
                                   Width="150" 
                                   VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbPrinters" Width="300" Margin="0,0,10,0"/>
                        <Button Content="Settings" Width="90"/>
                    </StackPanel>

                    <!-- Page Range -->
                    <GroupBox Header="Page Range" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="10,5">
                            <RadioButton x:Name="RbPrintAll" Content="Print all pages" IsChecked="True" Margin="0,0,20,0"/>
                            <RadioButton x:Name="RbPrintRange" Content="Pages:" Margin="0,0,5,0"/>
                            <TextBox x:Name="TxtPagesToPrint" Width="100" IsEnabled="False"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Copies -->
                    <GroupBox Header="Copies" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="10,5">
                            <TextBlock Text="Number:" Width="100" VerticalAlignment="Center"/>
                            <TextBox x:Name="TxtCopies" Width="50" Text="1" Margin="0,0,20,0"/>

                            <TextBlock Text="Collation:" Width="100" VerticalAlignment="Center"/>
                            <ComboBox x:Name="CmbCollation" Width="150">
                                <ComboBoxItem Content="By documents"/>
                                <ComboBoxItem Content="None"/>
                            </ComboBox>
                        </StackPanel>
                    </GroupBox>

                    <!-- Page scaling -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Page scaling:" Width="150" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbScaling" Width="200" Margin="0,0,20,0">
                            <ComboBoxItem Content="Scale to fit"/>
                            <ComboBoxItem Content="Actual size"/>
                            <ComboBoxItem Content="Shrink oversized pages"/>
                        </ComboBox>
                        <CheckBox x:Name="ChkAutoPortrait" Content="Auto Portrait/Landscape"/>
                    </StackPanel>

                    <!-- Email attachments -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="E-mail attachments:" Width="150" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbEmailAttach" Width="200">
                            <ComboBoxItem Content="Ignore"/>
                            <ComboBoxItem Content="Include"/>
                            <ComboBoxItem Content="Prompt"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Cover page -->
                    <CheckBox x:Name="ChkPrintCoverPage" Content="Print cover page"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Save / Cancel Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="10">
            <Button x:Name="BtnSave" Content="Save" Width="100" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button x:Name="BtnCancel" Content="Cancel" Width="100" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
