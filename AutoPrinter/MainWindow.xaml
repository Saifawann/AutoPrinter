<Window x:Class="AutoPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPrinter"
        mc:Ignorable="d"
        Title="Auto PDF Printer" Height="450" Width="800">


    <Grid>
        <!-- Define 2 Columns: Sidebar + Main -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <DockPanel Grid.Column="0" Background="#2d2d30" LastChildFill="True">

            <!-- Pause/Resume Button -->
            <Button x:Name="PauseResumeBtn"
                    Content="Pause"
                    Margin="10"
                    Height="40"
                    Foreground="White"
                    Background="#3a3a3d"
                    DockPanel.Dock="Top"/>

            <!-- Spacer to push settings button to bottom -->
            <DockPanel DockPanel.Dock="Bottom" Margin="10">
                <Button x:Name="SettingsBtn"
                        Content="⚙ Settings"
                        Height="40"
                        Foreground="White"
                        Background="#3a3a3d"
                        Click="BtnSettings_Click"/>
            </DockPanel>
        </DockPanel>

        <!-- Main Content -->
        <Grid Grid.Column="1" Background="White">
            <Border Margin="10" BorderBrush="#ccc" BorderThickness="1" CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="TxtLogs"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
